---
const { icon, title, description } = Astro.props;
---

<div
  class="flex flex-col items-center text-center bg-white dark:bg-gray-800 rounded-2xl shadow-md p-6 
         hover:shadow-xl hover:scale-105 transition-transform duration-300 w-60 mx-auto"
>
  <div class="w-16 h-16 mb-4 flex items-center justify-center bg-blue-100 dark:bg-blue-900 rounded-full">
    <img src={icon} alt={title} class="w-10 h-10 object-contain" loading="lazy" />
  </div>
  <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-200">{title}</h3>
  <p class="text-sm text-gray-600 dark:text-gray-400 mt-2 leading-snug">{description}</p>
</div>
