---
// src/components/TestimonialCard.astro
// Definici칩n de las propiedades (props) que recibir치 el componente
interface Props {
    quote: string;
    name: string;
    title: string;
    linkedinLink: string; // Usaremos un solo enlace que apunta a tu secci칩n de recomendaciones
}

const { quote, name, title, linkedinLink } = Astro.props;
---

<div class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700 hover:shadow-xl transition duration-300 h-full flex flex-col justify-between">
    <div>
        <i class="fas fa-quote-left text-blue-600 text-xl mb-4"></i>
        <p class="text-gray-700 dark:text-gray-300 italic mb-4 text-left grow">
            "{quote}"
        </p>
    </div>
    
    <div class="flex items-center justify-start mt-4">
        <div class="ml-0 text-left">
            <p class="font-semibold text-gray-800 dark:text-white">{name}</p>
            <p class="text-sm text-gray-500 dark:text-gray-400">{title}</p>
            
            <a 
                href={linkedinLink} 
                target="_blank" 
                class="text-xs text-blue-500 hover:text-blue-600 font-semibold flex items-center mt-1"
                aria-label={`Ver recomendaci칩n de ${name} en LinkedIn`}
            >
                <i class="fab fa-linkedin mr-1"></i> Ver en LinkedIn
            </a>
        </div>
    </div>
</div>