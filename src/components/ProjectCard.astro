---
interface Props {
  title: string;
  description: string;
  tech: string; 
  link: string;
  docLink?: string;
  quality: string[]; 
  isMultiRepo?: boolean;
  upcoming?: boolean; // nuevo prop
}

const { title, description, tech, link, docLink, quality, isMultiRepo, upcoming = false } = Astro.props;
---

<article 
  class="relative bg-white dark:bg-gray-800 p-6 rounded-2xl shadow-2xl 
         hover:shadow-blue-500/50 hover:border-blue-500 transition-all 
         duration-300 transform hover:-translate-y-2 border-t-8 border-blue-600 dark:border-blue-400 
         min-h-[400px] flex flex-col justify-between">

  {upcoming && (
    <span class="absolute top-1 right-4 bg-yellow-400 text-yellow-900 font-bold px-3 py-1 rounded-full shadow-md text-xs">
      Próximamente
    </span>
  )}

  <div>
    <h3 class="text-2xl font-extrabold mb-3 text-gray-900 dark:text-white">
      {title}
    </h3>
    
    <div class="flex flex-wrap gap-2 mb-4 pb-2 border-b dark:border-gray-700">
      {quality.map(item => (
        <span class="text-xs font-bold px-3 py-1 bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200 rounded-full border border-blue-400">
          {item}
        </span>
      ))}
    </div>

    <p class="text-sm text-gray-700 dark:text-gray-300 mb-4">
      {description}
    </p>
    
  </div>
  
  <div class="mt-auto"> 
    <p class="text-xs text-gray-500 dark:text-gray-400 mb-6 pt-4">
      <span class="font-bold text-gray-800 dark:text-gray-200">Stack Principal:</span> {tech}
    </p>

    <div class="flex gap-4">
      <a
        href={link}
        target="_blank"
        class="flex items-center gap-2 px-5 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-semibold"
        rel="noopener noreferrer"
      >
        <i class="fab fa-github"></i> 
        <span>{isMultiRepo ? 'Frontend Repo' : 'Ver Código'}</span>
      </a>

      {docLink && (
        <a
          href={docLink}
          target="_blank"
          class="flex items-center gap-2 px-5 py-2 border border-gray-400 text-gray-800 dark:text-gray-300 rounded-lg hover:bg-gray-200 transition dark:hover:bg-gray-700"
        >
          <i class={isMultiRepo ? "fab fa-github-alt" : "fas fa-file-alt"}></i> 
          <span>{isMultiRepo ? 'Backend Repo' : 'Documentación'}</span>
        </a>
      )}
    </div>
  </div>
</article>
